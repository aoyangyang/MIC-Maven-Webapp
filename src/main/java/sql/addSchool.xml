<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mic.dao.AddSchoolDao">

	<!-- 学校名称录入 -->
	<insert id="AddSchoolName"   parameterType="String"  flushCache="true">  
			INSERT INTO 
				school(s_name)
			VALUES 
				(#{schoolName});
	</insert>  
	
	<select id="getSchoolId"  resultType="Integer">
			SELECT 
				id
			FROM 
				school
			WHERE 
				s_name=#{schoolName};
	</select>
	
	<!-- 写入学部 -->
	<insert id="AddDepartments"  parameterType="com.mic.bean.AddSchool" flushCache="true">  
			INSERT INTO 
				departments(d_name,school_id)
			VALUES 
				(#{d_name},#{id});
	</insert>  
	
</mapper>  