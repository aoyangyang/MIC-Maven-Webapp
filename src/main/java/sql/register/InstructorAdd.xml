<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mic.dao.register.InstructorAddDao">

<!-- 辅导员注册写入leader -->
	<insert id="insAddLeader"  parameterType="com.mic.bean.departments.Leader" flushCache="true" 							
											useGeneratedKeys="true" keyProperty="id" keyColumn="id">  
		INSERT
			leader(
				username,
				password,
				address,
				email,
				phone
			)VALUES(
				#{username},
				#{password},
				#{address},
				#{email},
				#{phone}
			);
	</insert>


<!-- 辅导员注册预先写入 ad_class表 -->
	<insert id="insAddAdClass"  parameterType="Integer" flushCache="true" 	>  
		INSERT
			ad_class(
				leader_id
			)VALUES(
				#{id}
			);
	</insert>
	
	

	<!-- 查出所有的学校 -->
	<select id="findAllSchool" resultType="com.mic.bean.school.FindSchool">  
		SELECT
			id,s_name
		FROM
			school;
	</select>  

	
	<select id="findDepartments" parameterType="Integer" resultType="com.mic.bean.departments.FindDepartments">  
		SELECT 
			id,d_name
		FROM
			departments
		WHERE
			school_id = #{id};
		
	</select>   
	
	<insert id="addClasss"  parameterType="com.mic.bean.classs.AddClass" flushCache="true" 
							useGeneratedKeys="true" keyProperty="id" keyColumn="id">  
		INSERT INTO 
			class(
				classname,
				departments_id,
				enrolment,
				class_size
			)VALUES(
				#{classname},
				#{departments_id},
				#{enrolment},
				#{class_size}
		)
	</insert>  	
	
	<insert id="adClasss"  parameterType="com.mic.bean.classs.AdClass" flushCache="true" >  
		INSERT INTO 
			ad_class(
				leader_id,
				class_id
		)VALUES(
				#{leaderId},
				#{classId}
		)
	</insert>
	
</mapper>  