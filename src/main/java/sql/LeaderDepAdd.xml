<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mic.dao.LeaderDepAddDao">

	<!-- 查询出all的学校 -->
	<select id="getSchool"  resultType="com.mic.bean.School">
			SELECT 
				id,s_name
			FROM
				school
	</select>
	
	<!-- 写入leader -->
	<insert id="setLeader"  parameterType="com.mic.bean.Leader" useGeneratedKeys="true"  keyProperty="id" >
			INSERT INTO leader(
				username,
				password,
				address,
				email,
				phone
			)VALUE(
				#{username},
				#{password},
				#{address},
				#{email},
				#{phone}
			)
    </insert>
     
    
    <!-- 写入ad_school -->
    <insert id="setAdSchool"  parameterType="com.mic.bean.AdSchool"  >
			INSERT INTO ad_school(
				leader_id,
				school_id
			)VALUE(
				#{leader_id},
				#{school_id}
			)
    </insert>
</mapper>  